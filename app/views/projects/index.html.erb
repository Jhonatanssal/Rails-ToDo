
<div class="card shadow">
  <div class="card-header pt-4 bg-white">
    <h2 class="card-title d-flex justify-content-between align-items-center">
      <span>Projects</span>
      <span><%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %></span>
    </h2>
  </div>
  <div class="card-body">
    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none text-dark' do %>
        <div class="card mb-3 shadow-sm">
          <div class="card-body pb-0">
            <h4 class="card-title">
              <%= project.name %>
            </h4>
            <p>
              <%= project.description %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



